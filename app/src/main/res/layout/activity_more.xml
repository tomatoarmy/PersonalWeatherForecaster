<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="more.MoreActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f5f5f5"
        android:id="@+id/more_top_layout">
        <ImageView
            android:id="@+id/back_icon_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多设置"
           android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textSize="18sp"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/more_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc"
        android:layout_alignBottom="@id/more_top_layout"/>

    <TextView
        android:id="@+id/more_tv_exchangeBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="改变壁纸"
        android:textSize="18sp"
        android:layout_below="@id/more_line1"
        android:drawableLeft="@mipmap/more_bg"
        android:drawablePadding="20dp"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/more_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc"
        android:layout_alignBottom="@id/more_tv_exchangeBg"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_line2"
        android:id="@+id/more_rg"
        android:orientation="horizontal"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/more_rg_green"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#C5edd1"
            android:button="@null"
            android:gravity="center"
            android:text="绿色"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/more_rg_pink"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#fcafae"
            android:button="@null"
            android:gravity="center"
            android:text="粉色"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/more_rg_blue"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#87ceed"
            android:button="@null"
            android:gravity="center"
            android:text="蓝色"
            android:textStyle="bold"/>
    </RadioGroup>

    <TextView
        android:id="@+id/more_tv_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="当前版本"
        android:textSize="18sp"
        android:layout_below="@id/more_rg"
        android:drawableLeft="@mipmap/more_version"
        android:drawablePadding="20dp"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/more_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc"
        android:layout_alignBottom="@id/more_tv_version"/>

    <TextView
        android:id="@+id/more_tv_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="清除缓存"
        android:textSize="18sp"
        android:layout_below="@id/more_line3"
        android:drawableLeft="@mipmap/more_cache"
        android:drawablePadding="20dp"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/more_line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc"
        android:layout_alignBottom="@id/more_tv_cache"/>

    <TextView
        android:id="@+id/more_tv_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="分享软件"
        android:textSize="18sp"
        android:layout_below="@id/more_line4"
        android:drawableLeft="@mipmap/more_share"
        android:drawablePadding="20dp"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/more_line5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc"
        android:layout_alignBottom="@id/more_tv_share"/>







</RelativeLayout>